package com.AshishKumar.tools.lassoTool{	import flash.display.Sprite;	import flash.geom.ColorTransform;		public class FillArea extends Sprite	{		private var _color:uint;				public function FillArea()		{			super();		}				public function fillColor($color:uint,$alpha:Number):void		{			_color = $color;						var colorTransform:ColorTransform = new ColorTransform();			colorTransform.color = _color;						transform.colorTransform = colorTransform;			IrregularShape(parent).hidePoints();			alpha = $alpha;		}				public function get color():uint		{			return _color;		}	}}